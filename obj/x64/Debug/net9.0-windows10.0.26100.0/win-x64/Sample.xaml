<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AIDevGallery.Sample.Sample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid ColumnSpacing="8" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBox x:ConnectionId='2'
            x:Name="InputTextBox"
            AutomationProperties.Name="Prompt input"
            Description=" "
                                 
            PlaceholderText="Enter a topic to generate text on.."
            Text="Tell me a fun fact about space."
                                           />
        <StackPanel
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Orientation="Horizontal"
            Spacing="8">
            <Button x:ConnectionId='4'
                x:Name="GenerateButton"
                MinWidth="86"
                                            
                Content="Generate"
                Style="{ThemeResource AccentButtonStyle}" />
            <Button x:ConnectionId='5'
                x:Name="StopBtn"
                MinWidth="86"
                AutomationProperties.Name="Stop"
                                     
                Style="{ThemeResource AccentButtonStyle}"
                Visibility="Collapsed">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon x:ConnectionId='6'
                        x:Name="StopIcon"
                        FontSize="16"
                        Glyph="&#xE73B;" />
                    <ProgressRing x:ConnectionId='7'
                        x:Name="OutputProgressBar"
                        Width="16"
                        Height="16"
                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                        IsIndeterminate="True"
                        Visibility="Collapsed" />
                    <TextBlock Text="Stop" />
                </StackPanel>
            </Button>
        </StackPanel>
        <ScrollViewer
            Grid.Row="1"
            Grid.ColumnSpan="2"
            AutomationProperties.Name="Generated Text Scroll Area"
            HorizontalScrollBarVisibility="Disabled"
            IsTabStop="True"
            TabNavigation="Once"
            VerticalScrollBarVisibility="Auto">
            <TextBlock x:ConnectionId='3'
                x:Name="GenerateTextBlock"
                AutomationProperties.LiveSetting="Assertive"
                AutomationProperties.Name="Output"
                Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                IsTextSelectionEnabled="True"
                TextWrapping="WrapWholeWords" />
        </ScrollViewer>
    </Grid>
</Page>

